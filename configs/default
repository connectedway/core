
option(BLUE_PARAM_64BIT_INTEGER "Compiler supports 64 bit integers" ON)
option(BLUE_PARAM_64BIT_POINTER "Compiler supports 64 bit pointers" ON)
option(BLUE_PARAM_LONGINT_64 "Compiler treats a long int as 64 bits" ON)
# FIXME: We need to set up BLUE_ENV_HOME and rewrite config files
option(BLUE_PARAM_PERSIST "Build in persistent configuration support" OFF)
option(BLUE_PARAM_PERF_STATS "Build in performance statistics" OFF)
option(BLUE_PARAM_HANDLE_DEBUG "Build in debug checks for handles" OFF)
option(BLUE_PARAM_MESSAGE_DEBUG "Build in debug checks for messages" OFF)
option(BLUE_PARAM_APP_DEBUG "Build in debug checks for apps" OFF)
option(BLUE_PARAM_HEAP_DEBUG "Build in debug checks for heap" ON)
option(BLUE_PARAM_UNICODE_API "File APIs use unicode" ON)
option(BLUE_STACK_TRACE "Store call stack traces in debug output" ON)
option(BLUE_PARAM_PRESELECT_PASS "App scheduler should rebuild waitlists" ON)
set(BLUE_PARAM_MAX_HANDLE16 "100" CACHE STRING "Max 16-bit handles")
set(BLUE_PARAM_MAX_PATH "128" CACHE STRING "Max length of file system path")
set(BLUE_PARAM_MAX_MAPS "20" CACHE STRING "Max file system maps")
set(BLUE_PARAM_CALL_STACK_SIZE "4280" CACHE STRING "Max DCE call stack size")
set(BLUE_PARAM_TRACE_LEN "1" CACHE STRING "Size of trace buffer (must be at least 1)")
set(BLUE_PARAM_MAX_SCHED_WAIT "4000" CACHE STRING "Maximum scheduler sleep")

set(BLUE_WCHAR "wchar_t" CACHE STRING "Platform type of a wide character")
option(INCLUDE_PLATFORM_WCHAR "Include wchar.h" ON)
set(PLATFORM_WCHAR "wchar.h" CACHE STRING "Name of system types")

set(BLUE_PROCESS_ID "pid_t" CACHE STRING "Platform type of a process id")
option(INCLUDE_PLATFORM_PROCESS_ID "Include platform process id" ON)
set(PLATFORM_PROCESS_ID "sys/types.h" CACHE STRING "Include File Name for Process ID")

set(BLUE_SIGAIO "SIGRTMIN" CACHE STRING "Signal Mapping for Async IO Signal")
option(INCLUDE_PLATFORM_SIGNALS "Include platform signals" ON)
set(PLATFORM_SIGNALS "signal.h" CACHE STRING "Include File Name for signals")

set(BLUE_PARAM_SHARE_VARIANT "master" CACHE STRING "Variant name of build")
set(BLUE_PARAM_DEFAULT_NETBIOS_MODE "BLUE_CONFIG_BMODE" CACHE STRING "Interface default NetBIOS Mode")

set(BLUE_PARAM_DEFAULT_NAME "localhost" CACHE STRING "Default system name")
set(BLUE_PARAM_DEFAULT_SCOPE "" CACHE STRING "Default system scope")
set(BLUE_PARAM_DEFAULT_DESCR "Open Files" CACHE STRING "Default system description")
set(BLUE_PARAM_DEFAULT_DOMAIN "WORKGROUP" CACHE STRING "Default system domain")
option(BLUE_PARAM_INIT_ON_LOAD "Initialize libraries on load" ON)
set(BLUE_LOAD "__attribute__((constructor))" CACHE STRING "Compiler attribute for constructor")
set(BLUE_UNLOAD "__attribute__((destructor))" CACHE STRING "Compile attribute for destructor")

set(OFC_IMPL "darwin" CACHE STRING "Core platform implementation to use")
set(OFC_HEAP_IMPL "cheap" CACHE STRING "Heap implementation to use")
option(BLUE_PARAM_DISCOVER_IPV4 "Support IPv4 Addressing" ON)
option(BLUE_PARAM_DISCOVER_IPV6 "Support IPv6 Addressing" ON)
